# Production Environment Configuration for Sterenova Platform
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# SERVICE DOMAINS (FQDN)
# =============================================================================
SERVICE_FQDN_KEYCLOAK=keycloack.sterenova.fr
SERVICE_FQDN_KONG=kong.sterenova.fr
SERVICE_FQDN_STERENOVA_FLUX_BACKEND=api.flux.sterenova.fr
SERVICE_FQDN_STERENOVA_FLUX_FRONTEND=flux.sterenova.fr
SERVICE_FQDN_STERENOVA_STUDIO_BACKEND=api.studio.sterenova.fr
SERVICE_FQDN_STERENOVA_STUDIO_FRONTEND=studio.sterenova.fr

# =============================================================================
# SERVICE URLs (HTTPS)
# =============================================================================
SERVICE_URL_KEYCLOAK=https://keycloack.sterenova.fr
SERVICE_URL_KONG=https://kong.sterenova.fr
SERVICE_URL_STERENOVA_FLUX_BACKEND=https://api.flux.sterenova.fr
SERVICE_URL_STERENOVA_FLUX_FRONTEND=https://flux.sterenova.fr
SERVICE_URL_STERENOVA_STUDIO_BACKEND=https://api.studio.sterenova.fr
SERVICE_URL_STERENOVA_STUDIO_FRONTEND=https://studio.sterenova.fr

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=platform
POSTGRES_USER=platform
POSTGRES_PASSWORD=your_secure_postgres_password_here

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_admin_password_here
KEYCLOAK_REALM=platform
KEYCLOAK_CLIENT_ID=backend-service
KEYCLOAK_CLIENT_SECRET=your_secure_keycloak_client_secret_here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# Path to SSL certificates (mounted in Kong container)
SSL_CERT_PATH=/etc/ssl/certs

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
KEYCLOAK_LOG_LEVEL=INFO

# =============================================================================
# COOLIFY SPECIFIC CONFIGURATION
# =============================================================================
# Coolify will automatically set these based on your deployment
# COOLIFY_PROJECT_ID=your_project_id
# COOLIFY_APPLICATION_ID=your_application_id
# COOLIFY_DEPLOYMENT_ID=your_deployment_id
